<%- include("../partials/header") %>

  <main class="flex-fill">
    <div class="container mt-4">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Employee Information</h2>
        <button class="btn btn-outline-success text-start" data-bs-toggle="modal" data-bs-target="#addEmployeeModal">
          <i class="bi bi-person-plus me-2"></i> Add Employee
        </button>
      </div>

      <table class="table table-striped table-hover" style="box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;">
        <thead class="table-light">
          <tr >
            <th class="fw-semibold">ID</th>
            <th class="fw-semibold">Name</th>
            <th class="fw-semibold">Email</th>
            <th class="fw-semibold">Phone</th>
            <th class="fw-semibold">Post</th>
            <th class="fw-semibold">Department</th>
            <th class="fw-semibold">Balance</th>
            <th class="fw-semibold">Level</th>
            <th class="fw-semibold">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% employees.forEach(emp=> { %>
            <tr>
              <td>
                <%= emp.id %>
              </td>
              <td>
                <%= emp.name %>
              </td>
              <td>
                <%= emp.email %>
              </td>
              <td>
                <%= emp.phone %>
              </td>
              <td>
                <%= emp.role %>
              </td>
              <td>
                <%= emp.department %>
              </td>
              <td>
                <%= parseFloat(emp.balance).toFixed(2) %>
              </td>
              <td><span class="badge bg-info text-dark">
                  <%= emp.level %>
                </span></td>

              <td>
                <div class="d-flex gap-2">
                  <!-- Edit Button -->
                  <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal"
                    data-bs-target="#editEmployeeModal<%= emp.id %>">
                    <i class="bi bi-pen-fill"></i>
                  </button>

                  <!-- Delete Button -->
                  <button class="btn btn-sm btn-outline-danger delete-btn" data-id="<%= emp.id %>"
                    data-name="<%= emp.name %>">
                    <i class="bi bi-trash-fill"></i>
                  </button>

                  <!-- Assign Task Button -->
                  <button class="btn btn-sm btn-outline-success assign-btn" data-id="<%= emp.id %>"
                    data-name="<%= emp.name %>" data-bs-toggle="modal" data-bs-target="#assignTaskModal">
                    <i class="bi bi-clipboard-check-fill"></i>
                  </button>
                </div>
              </td>
            </tr>

            <!-- Edit Modal for Each Employee -->
            <div class="modal fade" id="editEmployeeModal<%= emp.id %>" tabindex="-1"
              aria-labelledby="editEmployeeModalLabel<%= emp.id %>" aria-hidden="true">
              <div class="modal-dialog modal-lg">
                <div class="modal-content border-0 shadow-lg">
                  <form action="/edit-employee" method="POST">
                    <div class="modal-header bg-success text-white">
                      <h5 class="modal-title fw-bold" id="editEmployeeModalLabel<%= emp.id %>">
                        <i class="bi bi-pencil-square me-2"></i>Edit Employee: <%= emp.name %>
                      </h5>
                      <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                    </div>

                    <div class="modal-body p-4">
                      <input type="hidden" name="id" value="<%= emp.id %>">

                      <div class="row g-3">
                        <div class="col-md-6">
                          <div class="form-floating">
                            <input type="text" name="name" class="form-control" id="editName<%= emp.id %>"
                              value="<%= emp.name %>" placeholder="Full Name" required>
                            <label for="editName<%= emp.id %>">Full Name</label>
                          </div>
                        </div>

                        <div class="col-md-6">
                          <div class="form-floating">
                            <input type="number" name="balance" class="form-control" id="editBalance<%= emp.id %>"
                              value="<%= emp.balance %>" placeholder="Balance" required>
                            <label for="editBalance<%= emp.id %>">Balance (₹)</label>
                          </div>
                        </div>

                        <div class="col-md-6">
                          <div class="form-floating">
                            <select name="level" class="form-select" id="editLevel<%= emp.id %>" required>
                              <option value="JUNIOR" <%=emp.level==='JUNIOR' ? 'selected' : '' %>>Junior</option>
                              <option value="MIDDLE" <%=emp.level==='MIDDLE' ? 'selected' : '' %>>Middle</option>
                              <option value="SENIOR" <%=emp.level==='SENIOR' ? 'selected' : '' %>>Senior</option>
                            </select>
                            <label for="editLevel<%= emp.id %>">Level</label>
                          </div>
                        </div>

                        <div class="col-md-6">
                          <div class="form-floating">
                            <select name="role" class="form-select" id="editRole<%= emp.id %>" required>
                              <option value="UI Designer" <%=emp.role==='UI Designer' ? 'selected' : '' %>>UI Designer
                              </option>
                              <option value="Cyber Security" <%=emp.role==='Cyber Security' ? 'selected' : '' %>>Cyber
                                Security</option>
                              <option value="Frontend Developer" <%=emp.role==='Frontend Developer' ? 'selected' : '' %>
                                >Frontend Dev</option>
                              <option value="Backend Developer" <%=emp.role==='Backend Developer' ? 'selected' : '' %>
                                >Backend Dev</option>
                              <option value="Full-Stack Developer" <%=emp.role==='Full-Stack Developer' ? 'selected'
                                : '' %>>Full-Stack Dev</option>
                            </select>
                            <label for="editRole<%= emp.id %>">Role</label>
                          </div>
                        </div>

                        <div class="col-md-6">
                          <div class="form-floating">
                            <select name="department" class="form-select" id="editDept<%= emp.id %>">
                              <option value="Marketing" <%=emp.department==='Marketing' ? 'selected' : '' %>>Marketing
                              </option>
                              <option value="Sales" <%=emp.department==='Sales' ? 'selected' : '' %>>Sales</option>
                              <option value="HR" <%=emp.department==='HR' ? 'selected' : '' %>>HR</option>
                              <option value="Development" <%=emp.department==='Development' ? 'selected' : '' %>
                                >Development</option>
                              <option value="Finance" <%=emp.department==='Finance' ? 'selected' : '' %>>Finance
                              </option>
                            </select>
                            <label for="editDept<%= emp.id %>">Department</label>
                          </div>
                        </div>

                        <div class="col-md-6">
                          <div class="form-floating">
                            <input type="email" name="email" class="form-control" id="editEmail<%= emp.id %>"
                              value="<%= emp.email %>" placeholder="Email" required>
                            <label for="editEmail<%= emp.id %>">Email</label>
                          </div>
                        </div>

                        <div class="col-md-6">
                          <div class="form-floating">
                            <input type="text" name="phone" class="form-control" id="editPhone<%= emp.id %>"
                              value="<%= emp.phone %>" placeholder="Phone" pattern="[0-9]{10}" required>
                            <label for="editPhone<%= emp.id %>">Phone</label>
                          </div>
                        </div>
                      </div>
                    </div>

                    <div class="modal-footer border-top-0 bg-light">
                      <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                      </button>
                      <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle me-1"></i> Save Changes
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
            <% }) %>
        </tbody>
      </table>
    </div>
  </main>

  <!-- Add Employee Modal -->
<div class="modal fade" id="addEmployeeModal" tabindex="-1" aria-labelledby="addEmployeeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content border-0 shadow-lg">
      <form action="/add-employee" method="POST">
        <div class="modal-header bg-success text-white">
          <h5 class="modal-title fw-bold" id="addEmployeeModalLabel">
            <i class="bi bi-person-plus me-2"></i> Add New Employee
          </h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body p-4">
          <div class="row g-3">
            <div class="col-md-6">
              <div class="form-floating">
                <input type="text" name="id" class="form-control" id="addEmployeeId" placeholder="Employee ID" required>
                <label for="addEmployeeId">Employee ID</label>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-floating">
                <input type="text" name="name" class="form-control" id="addEmployeeName" placeholder="Full Name" required>
                <label for="addEmployeeName">Full Name</label>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-floating">
                <input type="number" name="balance" class="form-control" id="addEmployeeBalance" placeholder="Balance" required>
                <label for="addEmployeeBalance">Balance (₹)</label>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-floating">
                <select name="level" class="form-select" id="addEmployeeLevel" required>
                  <option value="" disabled selected>Select level</option>
                  <option value="JUNIOR">Junior</option>
                  <option value="MIDDLE">Middle</option>
                  <option value="SENIOR">Senior</option>
                </select>
                <label for="addEmployeeLevel">Level</label>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-floating">
                <select name="role" class="form-select" id="employeeRole" required>
                        <option selected disabled>Select Position</option>
                        <option value="UI Designer">CEO</option>
                        <option value="Full-Stack Developer">Board of Directors</option>
                        <option value="Frontend Developer">Manager</option>
                        <option value="Backend Developer">HR</option>
                        <option value="Full-Stack Developer">Team Leader</option>
                      </select>
                      <label for="employeeRole">Position</label>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-floating">
                 <input type="department" name="department" class="form-control" id="addEmployeeDepartment" placeholder="Department"
                        required>
                <label for="addEmployeeDepartment">Department</label>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-floating">
                <input type="email" name="email" class="form-control" id="addEmployeeEmail" placeholder="Email" required>
                <label for="addEmployeeEmail">Email</label>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-floating">
                <input type="text" name="phone" class="form-control" id="addEmployeePhone" 
                       placeholder="Phone" pattern="[0-9]{10}" required>
                <label for="addEmployeePhone">Phone</label>
              </div>
            </div>
          </div>
        </div>

        <div class="modal-footer border-top-0 bg-light">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
            <i class="bi bi-x-circle me-1"></i> Cancel
          </button>
          <button type="submit" class="btn btn-success">
            <i class="bi bi-check-circle me-1"></i> Save Employee
          </button>
        </div>
      </form>
    </div>
  </div>
</div>


  <!-- Assign Task Modal -->
  <div class="modal fade" id="assignTaskModal" tabindex="-1" aria-labelledby="assignTaskLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content border-0 shadow-lg">
        <form action="/assign-task" method="POST">
          <div class="modal-header bg-success text-white">
            <h5 class="modal-title fw-bold" id="assignTaskLabel">
              <i class="bi bi-clipboard-plus me-2"></i> Assign Task
            </h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>

          <div class="modal-body p-4">
            <input type="hidden" name="employeeId" id="assignEmpId">

            <div class="row g-3">
              <div class="col-12">
                <div class="form-floating">
                  <input type="text" class="form-control" id="assignEmpName">
                  <label for="assignEmpName">Employee</label>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-floating">
                  <input type="text" name="subject" class="form-control" id="taskSubject" placeholder="Subject"
                    required>
                  <label for="taskSubject">Subject</label>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-floating">
                  <input type="text" name="project" class="form-control" id="taskProject" placeholder="Project"
                    required>
                  <label for="taskProject">Project</label>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-floating">
                  <input type="date" name="deadline" class="form-control" id="taskDeadline" required>
                  <label for="taskDeadline">Deadline</label>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-floating">
                  <select name="priority" class="form-select" id="taskPriority">
                    <option value="Low">Low</option>
                    <option value="Medium" selected>Medium</option>
                    <option value="High">High</option>
                  </select>
                  <label for="taskPriority">Priority</label>
                </div>
              </div>
            </div>
          </div>

          <div class="modal-footer border-top-0 bg-light">
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
              <i class="bi bi-x-circle me-1"></i> Cancel
            </button>
            <button type="submit" class="btn btn-success">
              <i class="bi bi-check-circle me-1"></i>Assign Task
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
    // Delete button functionality
    document.querySelectorAll(".delete-btn").forEach(btn => {
      btn.addEventListener("click", function (e) {
        e.preventDefault();
        const id = this.getAttribute("data-id");
        const name = this.getAttribute("data-name");

        if (confirm(`Are you sure you want to delete ${name}?`)) {
          fetch(`/delete/${id}`, {
            method: "DELETE",
          })
            .then(res => res.json())
            .then(data => {
              if (data.success) {
                location.reload();
              }
            });
        }
      });
    });

    // Set employee data when assign task button is clicked
    document.querySelectorAll('.assign-btn').forEach(btn => {
      btn.addEventListener('click', function () {
        document.getElementById('assignEmpId').value = this.dataset.id;
        document.getElementById('assignEmpName').value = this.dataset.name;
      });
    });

  </script>

  <%- include("../partials/footer") %>
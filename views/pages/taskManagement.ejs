<%- include('../partials/header') %>

<div class="container my-4">
  <h2 class="mb-4"> Assigned Tasks</h2>
   <table class="table table-striped table-hover " style="box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;">
    <thead class="table-light">
      <tr>
        <th class="fw-semibold">Employee ID</th>
        <th class="fw-semibold">Name</th>
        <th class="fw-semibold">Subject</th>
        <th class="fw-semibold">Project</th>
        <th class="fw-semibold">Deadline</th>
        <th class="fw-semibold">Priority</th>
        <th class="fw-semibold">Assigned Date</th>
      </tr>
    </thead>
    <tbody>
      <% tasks.forEach(task => { %>
        <tr>
          <td><%= task.employeeId %></td>
          <td><%= task.employeeName %></td>
          <td><%= task.subject %></td>
          <td><%= task.project %></td>
          <td><%= task.deadline %></td>
          <td><%= task.priority %></td>
          <td><%= task.assignedAt %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('../partials/footer') %>
